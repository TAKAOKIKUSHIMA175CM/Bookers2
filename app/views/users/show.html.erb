  <div class="container">
    <div class='row'>

  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
          <div class = "col-xs-3">
            <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
            <table class = 'table'>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </table>
            <div class='row'>
            <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
              </div>
              <div class='row'>
          <%= form_for(@book) do |f| %>

            <h4>title</h4>
            <%= f.text_field :title ,class: "col-xs-12" %>

            <h4>Opinion</h4>
            <%= f.text_area :body,class: "col-xs-12" %><br>

            <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12" %>

            <% end %>
            </div>
           </div>



  <div class = "col-xs-9">
  <h2>Books</h2>

    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  </div>
  </div>
  </div>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>

</body>
</html>

