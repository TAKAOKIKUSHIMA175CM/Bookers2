<div class='body'>
  <div class='container'>

        <p id="notice"></p>
 
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <p>error</p>
  </div>
<% end %>

  <div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h1>Editing Book</h1>


 		<div class='row'>
          <%= form_for(@book) do |f| %>

            <h4>title</h4>
            <%= f.text_field :title ,class: "col-xs-12" %>

            <h4>Opinion</h4>
            <%= f.text_area :body,class: "col-xs-12" %><br>

            <%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %>

        <% end %>

        <%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
        <%= link_to "Back", books_path, class: "book_#{@book.id}" %>

  </div>
</div>



<footer>
  <div class='container'>
  	<div class='row'>
    	<div class='col-xs-3 col-xs-offset-9'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>